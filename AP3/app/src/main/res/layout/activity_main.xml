<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/asd"
            tools:context="com.example.victor.ap3.MainActivity">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digite a nota da sua AP1:"
                android:id="@+id/txt1"
                android:textColor="#000000"
                android:textSize="33dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Sua nota da AP1"
        android:inputType="numberDecimal"
        android:typeface="sans"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="16dp"
        android:text="Digite a nota da sua AP2:"
        android:textColor="#000000"
        android:textSize="33dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="128dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Sua nota da AP2"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="11dp"
        android:text="enviar"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:src="@drawable/fv" />
        </RelativeLayout>